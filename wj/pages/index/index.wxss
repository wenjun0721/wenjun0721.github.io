.card {
  margin: 1rem 1.5rem 0;
  background-color: #fff;
  box-shadow: 0px 0px 5px 2.5px rgba(238, 238, 238, 0.8);
  border-radius: 0.5rem;
  border: none;
}

.card-header {
  padding: 0.5rem;
  background-color: #fff;
  border-bottom: 1px solid #f2f2f2;
  border-radius: 0.5rem 0.5rem 0 0;
}

.card-footer {
  padding: 0.5rem;
  background-color: #fff;
  border-top: 1px solid #f2f2f2;
  border-radius: 0 0 0.5rem 0.5rem;
}

.card .slider-topic.card-header:first-child {
  border-radius: 0.5rem 0.5rem 0 0;
}

.card .slider-topic.card-header {
  padding: 0.2rem 0.5rem;
  background-color: #fff;
  border-bottom: 1px solid #f2f2f2;
}

.card .slider-topic.card-header .triangle_left {
  width: 0;
  height: 0;
  border-left: 0.5rem solid #00abe4;
  border-top: 0.5rem solid transparent;
  border-bottom: 0.5rem solid transparent;
}

.card .slider-topic.card-header h4 {
  padding: 0.2rem 0.5rem;
  background-color: #00abe4;
  font-family: PingFangSC-Regular;
  font-size: 11pt;
  color: #fff;
  display: inline-block;
  border-radius: 0.2rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card .slider-topic.card-header p {
  font-family: PingFangSC-Regular;
  font-size: 10pt;
  color: #999;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0.5rem;
  width: 100%;
}

.card .slider-topic .carousel-item {
  line-height: 14px;
}

.card .slider-topic .slider-topic-title {
overflow: hidden;
}
.card .nav-icon.card-body{
padding: 0;
}
