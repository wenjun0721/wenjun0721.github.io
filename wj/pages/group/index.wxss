
.header{
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  z-index: 2;
}
.header_search_box{
  background: #fff;
  display: flex;
  align-items: center;
  width: calc( 100% - 200rpx);
  height: 60rpx;
  border-radius: 100rpx;
}
.search_icon{
  position: absolute;
  left: 20rpx;
  width:60rpx;
  height:60rpx;
  margin-left:0rpx;
  margin-right: 20rpx;
}
.search_input{
  color:#aaa;
  font-size: 27rpx;
  width: 100%;
}
.tab{
  display: flex;
  background: #fea70a;
}
.tab_list{
  flex:1;
  height: 90rpx;
  position: relative;
  text-align: center;
}
.tab_list_top{
  color:#fff;
  font-size: 25rpx;
  margin-top: 15rpx;
}
.tab_list_bottom{
  color:#fff;
  font-size: 21rpx;
}
.tab_list_circle{
  width: 20rpx;
  height: 20rpx;
  background: #E278FE;
  position: absolute;
  border-radius: 50%;
  top: 20rpx;
  right: 10rpx;
}
.active{
  background:#FFE47D;
  color:#321600;
}

.tab_body{
  padding: 0 30rpx;
  background: #FFE47D;
  padding-bottom: 23rpx;
}
.tab_body_title{
  color:#321600;
  font-size: 22rpx;
  text-align: center;
  line-height: 66rpx;
}
.tab_body_content{
  background: #fff;
  display: flex;
  width: 100%;
  height: 310rpx;
}
.tab_body_content_left{
  width: 310rpx;
  height: 310rpx;
}
.tab_body_content_right{
  padding: 0 30rpx;
  flex:1;
  box-sizing:border-box;
}
.tab_body_content_right_title{
  text-align: center;
  color:#321600;
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
  margin-top:36rpx;
}
.tab_body_content_right_info{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top:20rpx;
}
.tab_body_content_right_info_left{
  display: flex;
  align-items: center;
}
.tab_body_content_right_info_left_tag{
  color: #FF1C4A;
  font-size: 26rpx;
}
.tab_body_content_right_info_left_price{
  color: #FF1C4A;
  font-size: 50rpx;
}
.tab_body_content_right_info_right{
  margin-left: 10rpx;
}
.tab_body_content_right_info_right_title{
  color: #FF1C4A;
  font-size: 20rpx;
}
.tab_body_content_right_info_right_price{
  color:#ccc;
  font-size: 18rpx;
  text-decoration: line-through;
}
.tab_body_buy{
  background: #FF1A48;
  color:#fff;
  font-size: 25rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top:30rpx;
  border-radius: 6rpx;
}
.goods_box{
  background: #ff98c6;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.goodsList{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 1%;
}
.goods_list{
  background:#fff;
  border-radius:8rpx;
  width:49%;
  padding-bottom:17rpx;
  margin-bottom:20rpx;
  overflow:hidden;
}
.goods_list_img{
  height: 360rpx;
  width: 100%;
}
.goods_list_title{
  color:#333;
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden; 
  padding: 0 10rpx;
  margin-top:10rpx;
}
.goods_list_info{
  text-align: center;
  margin-top:16rpx;
}
.goods_list_info_left{
  color:  #F51628;
  font-size: 26rpx;
}
.goods_list_info_middle{
  color:  #F51628;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.goods_list_info_right{
  color:  #C7C7C7;
  font-size: 23rpx;
  text-decoration: line-through;
}
.goods_list_btn{
  color: #fff;
  background: #FF4E51;
  line-height: 66rpx;
  text-align: center;
  width: 70%;
  border-radius: 8rpx;
  margin:0 auto;
  margin-top:20rpx;
}
.two_ads{
  display: flex;
}
.two_ads_list{
  width: 50%;
}
.search_btn{
  color:#fff;
  margin-left:59rpx;
  position:absolute;
  top:33rpx;
  right:28rpx;
  font-size:28rpx;
  text-shadow: 2px 1px 1px #999;
}