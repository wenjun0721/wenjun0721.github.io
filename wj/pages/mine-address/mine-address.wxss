/* pages/mine-address/mine-address.wxss */

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index:101;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 90%;
  margin-left: 5%;
  margin-top: 35%;
}

.toast-title {
  background-color: #fff;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  text-align: center;
}

.toast-title text {
  font-size: 14px;
  color: #333;
}

.toast-main {
  background-color: white;
  text-align: center;
  padding: 0 1rem;
}

.toast-input {
  padding: 0.4rem 0.5rem;
  border-bottom: 1px solid #eee;
  display: flex;
  align-content: center;
}

.toast-input:first-child {
  border-top: 1px solid #eee;
}

.toast-input li {
  display: inline-block;
  font-size: 9px;
  padding: 2px 4px;
  border-radius: 2px;
  border: solid 1px #00abe4;
  background-color: #fff;
  margin-right: 0.5rem;
  color: #00abe4;
}

.toast-input li.active {
  background-color: #00abe4;
  color: #fff;
}

.toast-input input {
  text-align: left;
  font-size: 12px;
  color: #333;
  flex: 1;
}

.toast-input text {
  width: 4rem;
  text-align: left;
  margin-right: 0.5rem;
  font-size: 12px;
  color: #333;
  line-height: 24px;
}

.toast-button {
  display: flex;
}

.button2 {
  width: 100%;
  background: #fff;
  border-radius:0 0 16rpx 16rpx;

}

.button1 {
    padding: 0;
    font-size: 11px;
    color: #ff464f;
    background: none;
    margin:0 0 0 1rem
}

.button2 button {
    flex: 1;
    border-radius: 50px;
    text-align: center;
    background-color: #00abe4;
    color: #ffffff;
    font-size: 12px;
    padding: 0.5rem 1rem;
    margin: 1rem;
}

.picker {
  padding-top: 1vh;
  padding-bottom: 1vh;
}

.flex{
  display: flex;
}
.address_addList{
  padding:20rpx 30rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}
.address_addList_left{
  color:#333;
  font-size: 30rpx;
  width: 166rpx;
}
.address_addList_input{
  color:#333;
  font-size: 30rpx;
  flex:1
}
.addressTag{
  color:#999;
  font-size: 26rpx;
  border:1px solid #999;
  border-radius: 10rpx;
  margin-right: 10rpx;
  padding:0rpx 8rpx;
}
.addressTagActive{
  color:#FF4747;
  font-size: 26rpx;
  border:1px solid #FF4747;
  border-radius: 10rpx;
  margin-right: 10rpx;
  padding:0rpx 8rpx;
}

.address_add{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  background: #E31C0C;
  font-size: 32rpx;
  color:#fff;
}

.areaSelectBg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  z-index: 102;
}
.areaSelectBody{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  background: #fff;
  z-index: 103;
}
.areaSelectBody_title{
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  font-size:30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.areaSelectBody_parent{
  display: flex;
  border-bottom: 1px solid #f1f1f1;
}
.areaSelectBody_parent_list{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
  width:20%;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  padding:0 10rpx;
  box-sizing: border-box;
}
.areaSelectBody_selectArea{
  height: 360rpx;
}
.areaSelectBody_selectArea_list{
  font-size: 26rpx;
  line-height: 60rpx;
  padding:0 10rpx;
}
.redText{
  color:#E31C0C;
}



.box-right{
  width: 240rpx;
  height: 80rpx;
    flex-shrink: 0;
}
.box-right button{
  width: 100rpx;
  float: left;
}