/* pages/search/search.wxss */

.header {
  width: 100%;
  padding: 0;
}

.search.flex {
  padding: 0 0.5rem 0;
}

.search h2 {
  font-size: 12pt;
  color: #333;
  margin-bottom: 0.5rem;
  margin-top: 0.5rem;
  display: block;
}

.search button {
  font-size: 10pt;
  color: #333;
  background: none;
  border: none
}

.search .list-search .search_list {
  display: inline-block;
  background: #f5f5f5;
  color: #666;
  font-size: 9pt;
  text-align: center;
  border-radius: 4px;
  width: auto;
  margin-bottom: 0.5rem;
  margin-right: 0.5rem;
  padding: 0.2rem 0.8rem;
}

.search .list-search .search_list.select {
  background: #ff464f;
  color: #fff;
  border: none;
  font-size:0.75rem;
}
.search .list-search .search_list search_text{
  color: #666!important;
  font-size:0.75rem;
}
.search .list-search .search_list.select search_text{
  color: #fff!important;
}

.search .list-history .search_list {
  color: #333;
  font-size: 9pt;
  text-align: left;
  padding: 0;
  margin-bottom: 0.5rem;
  padding-left: 0.5rem;
  display: block;
}
