.header {
  background: 0;
}

.search input {
  background: rgba(255, 255, 255, 0.5);
  color: #fff;
}

.search input {
  margin: 0.5rem;
  width: 100%;
}

.rally-bg {
  width: 100%;
  min-height: 600rpx;
}

image {
  width: 100%;
  height: 100%;
}

.spellGroup-box-tags {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  height: 120rpx;
  background: #fea70a;
}

.spellGroup-box-li {
  height: 120rpx;
  text-align: center;
  color: #fff;
  width: 33.3333%;
  position: relative;
}

.spellGroup-box-li-t1 {
  font-size:32rpx;
  margin-top: 0.5rem;
  color: #fff;
}

.spellGroup-box-li-t2 {
  font-size:28rpx;
  margin-top: 0.5rem;
  color: #fff;
}
.spellGroup_tags_goods {
    width: 100%;
    background: #ffe47d;
    display: none;
    padding-bottom: 11px;
}
.spellGroup-box-time{
  text-align: center;
  font-size: 30rpx;
}
.spellGroup_tags_goods.active{
  display: block;
}
.spellGroup_tags_goods_box {
    height: 7.7rem;
    background: #fff;
    margin:1.5rem;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}
.spellGroup_tags_goods_box_left {
    height: 7.7rem;
     width: 7.7rem;
}
.spellGroup_tags_goods_box_right {
    text-align: center;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    padding-top: 18rpx;
}
.spellGroup_tags_goods_title_box {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 47rpx;
    padding:0.7rem;
}
.spellGroup_tags_goods_title {
    text-align: center;
    color: #311800;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    display: -webkit-box-flex;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 100%;
}
.spellGroup_tags_goods_priceBox {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}
.spellGroup_tags_goods_priceInit {
    font-size: 1.4rem;
    color: #ff1c4a;
    margin-right: .6rem;
}
.spellGroup_buyNow {
    display: block;
    border-radius: 5px;
    background: #ff1a48;
    color: #fff;
    width: 8rem;
    height: 1.5rem;
    line-height: 1.5rem;
    text-align: center;
    margin: 0 auto;
    font-size: .65rem;
    margin-top: .5rem;
}
.spellGroupList_bg {
    background: #ff98c6;
    padding-top: 15rpx;
}