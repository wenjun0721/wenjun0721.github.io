
.cat-products{
margin: 0 0.5rem;
flex-wrap: wrap;
}
.cat-products .block-card{
flex-grow: 0;
flex-shrink: 1;
border:2rpx solid #ccc;
flex-basis: 31%;
border-radius: 5%;
margin-right: 1.5%;
margin-bottom: 0.3rem;
}
.cat-products .block-card .card{
text-align: center;
/*margin: 0 0.5rem;*/
width: 100%;
}
.cat-products .card-body{
height: 9rem;
width: 100%;
border-radius:0.5rem;
}
.cat-products .card-body .image{
width: 100%;
height: 100%;
/*border-radius:0.5rem;*/
border-top-left-radius:0.5rem;
border-top-right-radius:0.5rem;
}
.cat-products .card-footer{
padding: 0.5rem;
}
.cat-products .card-footer p{
font-size:9pt;
color: #333333;
margin-bottom: 0.5rem;
overflow: hidden;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
height: 25pt;
}
.cat-products .card-footer h3{
font-size: 12pt;
color: #ff464f;
}
.cat-products .card-footer text{
margin-left: 0.3rem;
text-decoration:line-through;
}
.cat-products .card-footer span,.cat-products .card-footer text{
font-size:9pt;
color: #cccccc;
flex-shrink: 0;
}


.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index:1;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 90%;
  margin-left: 5%;
  margin-top: 35%;
}

.toast-title {
  background-color: #fff;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  text-align: center;
}

.toast-title text {
  font-size: 14px;
  color: #333;
}



