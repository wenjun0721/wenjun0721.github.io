.flex-colmm .card{
padding: 0.6rem 0.8rem;
margin: 0;
flex: 1;
background-repeat: no-repeat;
background-position: right center;
background-size: auto 50%;
}
.flex-colmm .card+.card{
margin-left: 1rem;
}
.flex-colmm h3{
font-size: 11pt;
color: #00abe4;
margin-bottom: 0.6rem;
}
.flex-colmm span{
font-size: 8pt;
color: #cccccc;
}

.cat-products{
margin: 0 1rem;
flex-wrap: wrap;
}
.cat-products .block-card{
margin-top:1rem;
flex-grow: 0;
flex-shrink: 1;
flex-basis: 50%;
}
.cat-products .block-card .card{
/* margin: 0; */
margin: 0 0.5rem;
width: 100%;
}
.cat-products .card-body{
height: 16rem;
width: 100%;
border-radius:0.5rem;
}
.cat-products .card-body image{
width: 100%;
height: 100%;
border-radius:0.5rem;
}
.cat-products .card-footer{
padding: 0.5rem;
}
.cat-products .card-footer p{
font-size:9pt;
color: #333333;
margin-bottom: 0.5rem;
overflow: hidden;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
height: 25pt;
}
.cat-products .card-footer h3{
font-size: 12pt;
color: #ff464f;
}
.cat-products .card-footer text{
margin-left: 0.3rem;
text-decoration:line-through;
}
.cat-products .card-footer span,.cat-products .card-footer text{
font-size:9pt;
color: #cccccc;
flex-shrink: 0;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
 
